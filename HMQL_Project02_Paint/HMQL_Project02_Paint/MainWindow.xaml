<Window x:Class="HMQL_Project02_Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMQL_Project02_Paint"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0"
                    Name="actionStackPanel"
                    Orientation="Horizontal">
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Name="abilitiesStackPanel"
                    Orientation="Horizontal">
            <Button Click="chooseShapeButton_Click"
                    Width="56"
                    Margin="0 0 16 0"
                    Content="Choose">
            </Button>
            <Button Click="undoButton_Click"
                    Width="56"
                    Margin="0 0 16 0"
                    Content="Undo">
            </Button>
            <Button Click="redoButton_Click"
                    Width="56"
                    Margin="0 0 16 0"
                    Content="Redo">
            </Button>
            <Button Click="deleteTest_Click"
                    Width="56"
                    Margin="0 0 16 0"
                    Content="Test">
            </Button>
            <ComboBox Width="56" SelectionChanged="StrokeSizeSelectionChanged"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Margin="0 0 16 0"
                      Name="StrokeSizeCombobox">
            </ComboBox>
            <ComboBox Width="56" SelectionChanged="StrokePatternSelectionChanged"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Margin="0 0 16 0"
                      Name="StrokePatternCombobox">
            </ComboBox>
            <syncfusion:ColorPicker Name="ColorPicker" SelectedBrushChanged="ColorPicker_SelectedBrushChanged" />
            <TextBlock Text="{Binding TestX}" Width="100"></TextBlock>
            <TextBlock Text="{Binding TestY}" Width="100"></TextBlock>
        </StackPanel>

        <Canvas Grid.Row="1" Grid.ColumnSpan="2" x:Name="canvas" Background="White"></Canvas>
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="Transparent" MouseDown="Border_MouseDown" MouseMove="Border_MouseMove" MouseUp="Border_MouseUp"></Border>
    </Grid>
</Window>